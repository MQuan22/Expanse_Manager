@model PRN221_Project.Models.RegisterForm
@{
    ViewData["Register"] = "Register Page";
    Layout = "_LayoutLogin";
}

<div class="container">
    <h1>Welcome to Wallet App</h1>
    <div class="widget p-5" style="background-color:#212b36">
        <form asp-action="Register" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2>Register</h2>
            <div class="mb-3">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="@Model.Username" id="Username" data-val="true" data-val-required="Username is required." name="Username" ejs-for="true" class="e-control e-textbox e-lib" type="text" role="textbox" aria-labelledby="Username_title" value="">
                    <span asp-validation-for="@Model.Username" class="e-float-line"></span>
                    <label class="e-float-text e-label-top" id="Username_title" for="title">Username</label>
                </div>
            </div>

            <div class="mb-3">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="@Model.Password" id="Password" data-val="true" data-val-required="Password is required." name="Password" ejs-for="true" class="e-control e-textbox e-lib" type="password" role="textbox" aria-labelledby="Password_title" value="">
                    <span asp-validation-for="@Model.Password" class="e-float-line"></span>
                    <label class="e-float-text e-label-top" id="Password_title" for="title">Password</label>
                </div>
            </div>

            <div class="mb-3">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="@Model.ConfirmPassword" id="ConfirmPassword" data-val="true" data-val-required="ConfirmPassword is required." name="ConfirmPassword" ejs-for="true" class="e-control e-textbox e-lib" type="password" role="textbox" aria-labelledby="ConfirmPassword_title" value="">
                    <span asp-validation-for="@Model.ConfirmPassword" class="e-float-line"></span>
                    <label class="e-float-text e-label-top" id="ConfirmPassword_title" for="title">ConfirmPassword</label>
                </div>
            </div>

            <div class="mb-3">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="@Model.Fullname" id="Fullname" data-val="true" data-val-required="Fullname is required." name="Fullname" ejs-for="true" class="e-control e-textbox e-lib" type="text" role="textbox" aria-labelledby="Fullname_title" value="">
                    <span asp-validation-for="@Model.Fullname" class="e-float-line"></span>
                    <label class="e-float-text e-label-top" id="Fullname_title" for="title">Fullname</label>
                </div>
            </div>


            <div class="mb-3">
                <input type="submit" value="Register" class="e-control e-btn e-lib e-success" />
            </div>
            <p>Already have an account? <a href="../Login/Index">Go back</a>.</p>
        </form>
    </div>
</div>


